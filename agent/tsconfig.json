{
    "extends": "../packages/core/tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": ".",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        "lib": [
            "ESNext"
        ],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "ts-node": {
        "experimentalSpecifierResolution": "node",
        "transpileOnly": true,
        "esm": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts"
    ]
}